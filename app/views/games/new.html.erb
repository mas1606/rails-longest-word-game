<h1>New game</h1>
<table>
  <tr>
    <% @letters.each { |letter| %> <td> <%= letter %></td><% }%>
  </tr>
</table>
<br>
<br>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :sorted_letters, @letters %>
  <label for="word">What is the longest word you can find?
    <br>
    <input type="text" name="word">
  </label>
  <input type="submit" value="Play">


</form>